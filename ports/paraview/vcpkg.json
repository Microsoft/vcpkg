{
  "name": "paraview",
  "version": "5.8.0",
  "port-version": 4,
  "description": "VTK-based Data Analysis and Visualization Application",
  "homepage": "https://www.paraview.org/",
  "dependencies": [
    "boost-algorithm",
    "boost-core",
    "boost-format",
    "cgns",
    "protobuf",
    {
      "name": "vtk",
      "default-features": false,
      "features": [
        "paraview"
      ]
    }
  ],
  "features": {
    "all_modules": {
      "description": "enables the build of all paraview modules",
      "dependencies": [
        "ffmpeg",
        "gdal",
        "laszip",
        "pdal"
      ]
    },
    "cuda": {
      "description": "enables cuda within paraview",
      "dependencies": [
        "cuda",
        {
          "name": "vtk",
          "default-features": false,
          "features": [
            "cuda"
          ]
        }
      ]
    },
    "mpi": {
      "description": "enables cuda within paraview",
      "dependencies": [
        {
          "name": "hdf5",
          "default-features": false,
          "features": [
            "parallel"
          ]
        },
        {
          "name": "vtk",
          "default-features": false,
          "features": [
            "mpi"
          ]
        }
      ]
    },
    "python": {
      "description": "enables the build of python wrappers",
      "dependencies": [
        {
          "name": "vtk",
          "default-features": false,
          "features": [
            "python"
          ]
        }
      ]
    },
    "tools": {
      "description": "Build paraview tools"
    },
    "vtkm": {
      "description": "enables vtkm for the build of paraview",
      "dependencies": [
        {
          "name": "vtk",
          "default-features": false,
          "features": [
            "vtkm"
          ]
        }
      ]
    }
  }
}
